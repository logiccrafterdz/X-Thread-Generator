{
  "name": "xtweet-thread-generator",
  "version": "1.0.0",
  "description": "A personal tool that converts long-form articles or notes into high-quality Twitter threads with Arabic and English support",
  "main": "server.js",
  "private": true,
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "keywords": [
    "twitter",
    "threads",
    "arabic",
    "rtl",
    "social-media",
    "content-generation"
  ],
  "author": "Personal Project",
  "license": "UNLICENSED",
  "dependencies": {
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "cors": "^2.8.5",
    "express-rate-limit": "^6.8.1",
    "dotenv": "^16.3.1",
    "ajv": "^8.12.0",
    "winston": "^3.10.0",
    "winston-daily-rotate-file": "^4.7.1",
    "grapheme-splitter": "^1.0.4",
    "@google/generative-ai": "^0.2.1",
    "joi": "^17.9.2"
  },
  "devDependencies": {
    "jest": "^29.6.2",
    "supertest": "^6.3.3",
    "nodemon": "^3.0.1",
    "eslint": "^8.45.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.27.5",
    "@babel/core": "^7.22.9",
    "@babel/preset-env": "^7.22.9",
    "babel-jest": "^29.6.2"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "utils/**/*.js",
      "services/**/*.js",
      "server.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}