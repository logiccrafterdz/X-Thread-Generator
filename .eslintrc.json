{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true,
    "node": true,
    "jest": true
  },
  "extends": [
    "airbnb-base"
  ],
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "rules": {
    "no-console": "off",
    "consistent-return": "off",
    "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
    "max-len": ["error", { "code": 120, "ignoreUrls": true }],
    "no-underscore-dangle": "off",
    "prefer-destructuring": ["error", {"object": false, "array": false}]
  },
  "overrides": [
    {
      "files": ["tests/**/*.js"],
      "rules": {
        "no-unused-expressions": "off"
      }
    }
  ]
}